<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
  <div class="lg:w-1/2 w-full p-6">
    <div class="bg-white p-8 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Edit Your Profile</h2>
      <p class="text-gray-700 mb-6 text-center">Update your details to keep your profile up-to-date.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div id="form-section-1">
          <div class="flex flex-col md:flex-row md:space-x-4 mb-4">
            <div class="field w-full md:w-1/2 mb-4 md:mb-0">
              <%= f.label :first_name, class: "block text-gray-700" %>
              <%= f.text_field :first_name, placeholder: "First Name", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>

            <div class="field w-full md:w-1/2">
              <%= f.label :last_name, class: "block text-gray-700" %>
              <%= f.text_field :last_name, placeholder: "Last Name", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>
          </div>

          <div class="flex flex-col md:flex-row md:space-x-4 mb-4">
            <div class="field w-full md:w-1/2 mb-4 md:mb-0">
              <%= f.label :location, class: "block text-gray-700" %>
              <%= f.text_field :location, placeholder: "Location", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>

            <div class="field w-full md:w-1/2">
              <%= f.label :phone_number, class: "block text-gray-700" %>
              <%= f.text_field :phone_number, placeholder: "Phone Number", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>
          </div>

          <div class="field mb-4">
            <%= f.label :email, class: "block text-gray-700" %>
            <%= f.email_field :email, placeholder: "your-email@example.com", autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-4 text-gray-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="flex justify-between">
            <button type="button" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600" onclick="showNextSection()">Next</button>
          </div>
        </div>

        <div id="form-section-2" class="hidden">
          <div class="field mb-4">
            <%= f.label :user_photo, class: "block text-gray-700" %>
            <%= f.file_field :user_photo, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :bio, class: "block text-gray-700" %>
            <%= f.text_area :bio, placeholder: "Tell us about yourself", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :role, class: "block text-gray-700" %>
            <%= f.select :role, [['Client', 'client'], ['Psychologist', 'psychologist']], {}, { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500", onchange: 'showPsychologistFields(this)' } %>
          </div>

          <div class="field mb-4">
            <%= f.label :password, class: "block text-gray-700" %> <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field mb-4">
            <%= f.label :password_confirmation, class: "block text-gray-700" %>
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :current_password, class: "block text-gray-700" %> <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="flex justify-between">
            <button type="button" class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 focus:outline-none focus:bg-gray-600" onclick="showPreviousSection()">Back</button>
            <%= f.submit "Update", class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
          </div>
        </div>
      <% end %>

      <h3 class="text-xl font-bold mt-8">Cancel my account</h3>
      <div class="mb-4 text-gray-700">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-blue-500 hover:underline" %></div>

      <%= link_to "Back", :back, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>

<script>
  function showNextSection() {
    document.getElementById('form-section-1').classList.add('hidden');
    document.getElementById('form-section-2').classList.remove('hidden');
  }

  function showPreviousSection() {
    document.getElementById('form-section-2').classList.add('hidden');
    document.getElementById('form-section-1').classList.remove('hidden');
  }
</script>
