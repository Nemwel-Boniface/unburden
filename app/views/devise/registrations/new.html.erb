<div class="min-h-screen flex flex-col lg:flex-row items-center justify-center bg-gray-100">
  <div class="lg:w-1/2 w-full p-6">
    <div class="bg-white p-8 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Welcome to Our Psychologist Platform</h2>
      <p class="text-gray-700 mb-6 text-center">Join our community of professionals dedicated to mental health and well-being.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div id="form-section-1">
          <div class="flex flex-col md:flex-row md:space-x-4 mb-4">
            <div class="field w-full md:w-1/2 mb-4 md:mb-0">
              <%= f.label :first_name, class: "block text-gray-700" %>
              <%= f.text_field :first_name, placeholder: "First Name", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>

            <div class="field w-full md:w-1/2">
              <%= f.label :last_name, class: "block text-gray-700" %>
              <%= f.text_field :last_name, placeholder: "Last Name", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>
          </div>

          <div class="flex flex-col md:flex-row md:space-x-4 mb-4">
            <div class="field w-full md:w-1/2 mb-4 md:mb-0">
              <%= f.label :location, class: "block text-gray-700" %>
              <%= f.text_field :location, placeholder: "Location", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>

            <div class="field w-full md:w-1/2">
              <%= f.label :phone_number, class: "block text-gray-700" %>
              <%= f.text_field :phone_number, placeholder: "Phone Number", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
            </div>
          </div>

          <div class="field mb-4">
            <%= f.label :email, class: "block text-gray-700" %>
            <%= f.email_field :email, placeholder: "your-email@example.com", autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="flex justify-between">
            <button type="button" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600" onclick="showNextSection()">Next</button>
          </div>
        </div>

        <div id="form-section-2" class="hidden">
          <div class="field mb-4">
            <%= f.label :user_photo, class: "block text-gray-700" %>
            <%= f.file_field :user_photo, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :bio, class: "block text-gray-700" %>
            <%= f.text_area :bio, placeholder: "Tell us about yourself", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :password, class: "block text-gray-700" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="field mb-4">
            <%= f.label :password_confirmation, class: "block text-gray-700" %>
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" %>
          </div>

          <div class="flex justify-between">
            <button type="button" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600" onclick="showPreviousSection()">Back</button>
            <%= f.submit "Sign up", class: "bg-dark-brown-bg text-white px-4 py-2 rounded-md mx-4 my-2 text-center" %>
          </div>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        Already have an account?
        <%= link_to "Log in instead", new_session_path(resource_name), class: "text-sm text-brown-text underline pl-2" %><br />
      </div>
    </div>
  </div>

  <div class="lg:w-1/2 w-full h-64 lg:h-auto relative">
    <%= image_tag 'zoom.jpg', alt: "Sign up image", class: "object-cover w-full h-full" %>
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="absolute top-0 right-0 p-6 z-20 text-white">
      <h3 class="text-3xl font-bold mb-4">Join Our Caring Community</h3>
      <p class="text-lg mb-4">Become a part of a platform that values mental health and well-being.</p>
      <ul class="list-disc pl-5">
        <li>Access professional resources and tools</li>
        <li>Engage with a network of skilled psychologists</li>
        <li>Enhance your practice with ongoing support</li>
      </ul>
    </div>
  </div>
</div>

<script>
  function showNextSection() {
    document.getElementById('form-section-1').classList.add('hidden');
    document.getElementById('form-section-2').classList.remove('hidden');
  }

  function showPreviousSection() {
    document.getElementById('form-section-2').classList.add('hidden');
    document.getElementById('form-section-1').classList.remove('hidden');
  }
</script>
